{
	// Use IntelliSense to learn about possible attributes.
	// Hover to view descriptions of existing attributes.
	// For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
	"version": "0.2.0",
	"configurations": [
	{
		"name": "Launch Chrome",
		"request": "launch",
		"type": "chrome",
		"url": "http://localhost:5173",
		
	},
		{
			"name": "Launch Edge",
			"request": "launch",
			"type": "msedge",
			"url": "http://localhost:5173/",
			"webRoot": "${workspaceFolder}",
			"pathMapping": {
				"/": "${workspaceFolder}/src"
			}
		},
		
		{
			"name": "Launch index.html",
			"type": "firefox",
			"request": "launch",
			"reAttach": true,
			"file": "${workspaceFolder}/index.html"
		},
		{
			"name": "Launch SvelteKit",
			"type": "firefox",
			"request": "launch",
			"reAttach": true,
			"url": "http://localhost:5173/",
			"pathMappings": [
				{
					"url": "http://localhost:5173/src/rete",
					"path": "${workspaceFolder}/src/rete"
				},
				{
					"url": "http://localhost:5173/src/lib",
					"path": "${workspaceFolder}/src/lib"
				},
				{
					"url": "http://localhost:5173/",
					"path": "${workspaceFolder}/src"
				}
			]
		},
		{
			"name": "Launch localhost",
			"firefoxExecutable": "C:\\Program Files\\Mozilla Firefox\\firefox.exe",
			"type": "firefox",
			"request": "launch",
			"reAttach": true,
			"url": "http://localhost/index.html",
			"webRoot": "${workspaceFolder}"
		},
		{
			"name": "Attach",
			"type": "firefox",
			"request": "attach",
			"pathMappings": [
				{
					"url": "http://localhost:5173/src",
					"path": "${workspaceFolder}/src"
				}
			]
		},
		{
			"name": "Launch WebExtension",
			"type": "firefox",
			"request": "launch",
			"reAttach": true,
			"addonPath": "${workspaceFolder}"
		}
	]
}
